  <div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/profile', user: current_user %>
			<%= render 'books/newform', book: @book %>
		</div>

    <% if @model == 'user'%>
      <div class="col-xs-9">
        <h2>Users</h2>
        <!--users一覧 -->
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @datas.each do |user| %>
							<%= render 'users/each_index', user: user %>
            <% end %>
          </tbody>
        </table>
      </div>
			<!--books一覧 -->
      <% else @model == 'book'%>
        <div class="col-xs-9">
			<h2>Books index</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
						<th></th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @datas.each do |book| %>
						<%= render 'favorites/favorites_button', book: book %>
					<% end %>
				</tbody>
			</table>
		</div>
  <% end %>
		
	</div>
</div>


